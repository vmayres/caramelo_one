<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />

    <!--! MATERIALS !-->
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.5 0 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <!--! LINK: BASE LINK !-->
    <link name="base_link">

    </link>

    <!--! CHASSI !-->
    <!--? LINK ?-->
    <link name="chassi" type="fixed">
        <visual>
            <geometry>
                <box size="0.545 0.225 0.140" />
            </geometry>
            <material name="black" />
        </visual>
        <visual>
            <geometry>
                <box size="0.36 0.325 0.140" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <box size="0.545 0.225 0.140" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.0" x="0.545" y="0.225" z="0.140">
            <origin xyz="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!--? JOINT ?-->
    <joint name="base_chassi_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassi" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
    </joint>

    <gazebo reference="chassi">
        <material>Gazebo/Black</material>
    </gazebo>


    <!--! FRONT LEFT WHEELS !-->
    <!--? LINK ?-->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05" >
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--? JOINT ?-->
    <joint name="base_fl_wheel_joint" type="continuous">
        <parent link="chassi" />
        <child link="front_left_wheel" />
        <origin xyz="0.237 0.150 -0.055" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="front_left_wheel">
        <material>Gazebo\White</material>
    </gazebo>

    <!--! FRONT RIGHT WHEELS !-->
    <!--? LINK ?-->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--? JOINT ?-->
    <joint name="base_fr_wheel_joint" type="continuous">
        <parent link="chassi" />
        <child link="front_right_wheel" />
        <origin xyz="0.237 -0.150 -0.055" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="front_right_wheel">
        <material>Gazebo\White</material>
    </gazebo>

    <!--! REAR LEFT WHEELS !-->
    <!--? LINK ?-->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--? JOINT ?-->
    <joint name="base_rl_wheel_joint" type="continuous">
        <parent link="chassi" />
        <child link="rear_left_wheel" />
        <origin xyz="-0.237 0.150 -0.055" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo\White</material>
    </gazebo>

    <!--! REAR RIGHT WHEELS !-->
    <!--? LINK ?-->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--? JOINT ?-->
    <joint name="base_rr_wheel_joint" type="continuous">
        <parent link="chassi" />
        <child link="rear_right_wheel" />
        <origin xyz="-0.237 -0.150 -0.055" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/White</material>
    </gazebo>

</robot>